<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewGoalActivity"
    android:background="@drawable/gradient_background_two">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:src="@drawable/helping" />

    <TextView
        android:id="@+id/goal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the name of the volunteering group here:"
        android:paddingLeft="3dp"
        android:textColor="@android:color/white"
        android:paddingTop="30dp"/>

    <EditText
        android:id="@+id/edit_text_org_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Organisation name"
        android:inputType="text"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/end_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the date you completed this volunteering:"
        android:paddingTop="30dp"
        android:paddingLeft="3dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/date_format_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Format: DD/MM/YY"
        android:paddingLeft="3dp"
        android:paddingTop="3dp" />

    <EditText
        android:id="@+id/edit_text_vol_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:inputType="date"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a description of your activities here:"
        android:paddingTop="30dp"
        android:paddingLeft="3dp"
        android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/edit_text_vol_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Volunteering description"
        android:inputType="textMultiLine"
        android:textColor="@android:color/white"/>


</LinearLayout>